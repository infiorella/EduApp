@model EduApp.Models.ViewModels.CURSOS

@{
    ViewBag.Title = "Editar Curso";
    Layout = "~/Views/Shared/teacher_Layout.cshtml";
}
<div id="app">

    <div id="main">
        <header class="mb-3">
            <a href="#" class="burger-btn d-block d-xl-none">
                <i class="bi bi-justify fs-3"></i>
            </a>
        </header>

        <div class="page-heading">
            <div class="page-title">
                <div class="row">
                    <div class="col-12 col-md-6 order-md-1 order-last">
                        <h3>Cursos</h3>
                        <p class="text-subtitle text-muted">Editar Curso</p>
                    </div>
                    <div class="col-12 col-md-6 order-md-2 order-first">
                        <nav aria-label="breadcrumb" class="breadcrumb-header float-start float-lg-end">
                            <ol class="breadcrumb">
                                <li class="breadcrumb-item">@Html.ActionLink("Cursos", "Cursos", "Docente")</li>
                                <li class="breadcrumb-item active" aria-current="page">Curso</li>
                            </ol>
                        </nav>
                    </div>
                </div>
            </div>

            <!-- // Basic multiple Column Form section start -->
            <section id="multiple-column-form">
                <div class="row match-height">
                    <div class="col-12">
                        <div class="card">
                            <div class="card-header" style="padding-bottom:0px;">
                                <h4 class="card-title">Curso</h4>
                            </div>
                            <div class="card-content">
                                @using (Html.BeginForm("Index", "UpdateCurso", FormMethod.Post))
                                {
                                    <div class="card-body">
                                        <form class="form">
                                            <div class="row">
                                                <div class="col-md-6 col-12">
                                                    <div class="form-group">
                                                        <label for="Nombre">Nombre</label>
                                                        @Html.TextBoxFor(e => e.NOMBRE, null, new { @class = "form-control" })
                                                    </div>
                                                </div>
                                                <div class="col-md-12 col-12">
                                                    <div class="form-group">
                                                        <label for="Descripcion">Descripción</label>
                                                        @Html.TextAreaFor(e => e.DESCRIPCION, new {@class="form-control"})
                                                        <textarea class="form-control" value="@Model.DESCRIPCION"
                                                                  id="company-column" rows="3"></textarea>
                                                    </div>
                                                </div>
                                                <div class="col-md-6 col-12">
                                                    <div class="form-group">
                                                        <label for="Nivel">Nivel</label>
                                                        <input type="text" id="Nivel" class="form-control"
                                                               value="@Model.NIVEL" placeholder="Nivel" name="lname-column">
                                                    </div>
                                                </div>
                                                <div class="col-md-6 col-12">
                                                    <div class="form-group">
                                                        <label for="Horas">Horas</label>
                                                        <input type="number" id="Horas" class="form-control"
                                                               value="@Model.HORAS" placeholder="Horas" name="lname-column">
                                                    </div>
                                                </div>

                                                <div class="col-md-6 col-12">
                                                    <div class="form-group">
                                                        <label for="formFile">Imagen</label>
                                                        <input class="form-control" type="file" id="formFile">
                                                    </div>
                                                </div>




                                                <div class="col-md-6 col-12">
                                                    <div class="form-group">
                                                        <label for="city-column">Horas</label>
                                                        <select class="form-select" id="basicSelect">
                                                            <option>Curso</option>
                                                            <option>Blade Runner</option>
                                                            <option>Thor Ragnarok</option>
                                                        </select>
                                                    </div>
                                                </div>
                                                <div class="col-md-12 col-12">
                                                    <div class="form-group">
                                                        <label for="company-column">Descripción</label>
                                                        <textarea class="form-control" id="company-column" rows="3"></textarea>
                                                    </div>
                                                </div>
                                                <div class="col-12 d-flex justify-content-end">
                                                    <button type="submit" class="btn btn-success me-1 mb-1">Actualizar</button>
                                                </div>
                                            </div>
                                        </form>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </section>
        </div>
    </div>
</div>

