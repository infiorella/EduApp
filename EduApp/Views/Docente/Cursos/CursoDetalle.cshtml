@model EduApp.Models.CursoModel
@{
    ViewBag.Title = "DetalleCurso";
    Layout = "~/Views/Shared/teacher_Layout.cshtml";
}

<div id="app">
    <div id="main">
        <header class="mb-3">
            <a href="#" class="burger-btn d-block d-xl-none">
                <i class="bi bi-justify fs-3"></i>
            </a>
        </header>

        <div class="page-heading">
            <div class="page-title">
                <div class="row">
                    <div class="col-12 col-md-6 order-md-1 order-last">
                        <h3>Detalle Curso</h3>
                    </div>
                    <div class="col-12 col-md-6 order-md-2 order-first">
                        <nav aria-label="breadcrumb" class="breadcrumb-header float-start float-lg-end">
                            <ol class="breadcrumb">
                                <li class="breadcrumb-item">@Html.ActionLink("Dashboard", "Index", "Docente")</li>
                                <li class="breadcrumb-item active" aria-current="page">@Html.ActionLink("Curso", "Cursos", "Docente")</li>
                            </ol>
                        </nav>
                    </div>
                </div>
            </div>
            <section class="section">
                <div class="row">
                    <div class="col-xl-4 col-md-6 col-sm-12">
                        <div class="card">
                            <div class="card-content">
                                <div class="card-body">
                                    <h4 class="card-title">@Model.curso.NOMBRE</h4>
                                    <p class="card-text">
                                        @Model.curso.DESCRIPCION
                                        <br />
                                        Horas diarias: @Model.curso.HORAS
                                    </p>
                                </div>
                                <img class="img-fluid w-100" src="~/@Model.curso.IMAGEN" alt="Card image cap">

                            </div>
                        </div>
                    </div>

                    <div class="col-xl-8 col-md-8 col-sm-12">
                        <div class="card">
                            <div class="card-header">
                                <h4>Competencias</h4>
                            </div>
                            <div class="card-body">
                                <div class="accordion" id="accordionExample">
                                    @foreach (var item in Model.listCompetencia)
                                    {
                                        <div class="accordion-item">
                                            <h2 class="accordion-header" id="headingTwo">
                                                <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseOne" aria-expanded="false" aria-controls="collapseOne">
                                                    @item.NOMBRE
                                                </button>
                                            </h2>
                                            <div id="collapseOne" class="accordion-collapse collapse" aria-labelledby="headingOne" data-bs-parent="#accordionExample">
                                                <div class="accordion-body text-body" >
                                                    <strong>
                                                        @item.ALIAS: 
                                                    </strong>@item.DETALLE
                                                </div>
                                            </div>
                                        </div>
                                    }

                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            </section>

            <section class="section">
                <div class="card">
                    <div class="card-header">
                        <h4>Progreso de Competencias</h4>
                    </div>


                    <div class="card-body">
                        @foreach (var item in Model.listCompetencia)
                        {
                            <p>@item.NOMBRE</p>
                            <div class="progress progress-primary  mb-4">
                                <div class="progress-bar progress-label" role="progressbar" style="width: 1%" aria-valuenow="0"
                                     aria-valuemin="0" aria-valuemax="100"></div>
                            </div>
                        }
                    </div>
                </div>
            </section>

        </div>
    </div>
</div>


