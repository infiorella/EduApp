@model EduApp.Models.ActividadModel

@{
    ViewBag.Title = "VerTest";
    Layout = "~/Views/Shared/teacher_Layout.cshtml";
}


<div id="app">

    <div id="main">
        <header class="mb-3">
            <a href="#" class="burger-btn d-block d-xl-none">
                <i class="bi bi-justify fs-3"></i>
            </a>
        </header>

        <div class="page-heading">
            <div class="page-title">
                <div class="row">
                    <div class="col-12 col-md-6 order-md-1 order-last">
                        <h3>Test</h3>
                    </div>
                    <div class="col-12 col-md-6 order-md-2 order-first">
                        <nav aria-label="breadcrumb" class="breadcrumb-header float-start float-lg-end">
                            <ol class="breadcrumb">
                                <li class="breadcrumb-item">Actividades</li>
                                <li class="breadcrumb-item active" aria-current="page">@Html.ActionLink("Test", "ActividadesTest", "Docente")</li>
                            </ol>
                        </nav>
                    </div>
                </div>
            </div>


            <section class="section">
                <div class="row">
                    <div class="col-xl-12">
                        <div class="card">
                            <div class="card-header">
                                <div class="d-flex w-100 justify-content-between">
                                    <!---Titulo-->
                                    <div class="form-group row align-items-center">
                                        <h5>Titulo: @Model.actividad.TITULO</h5>
                                    </div>
                                    <span>
                                        <span class="badge bg-warning">Satisfacción: @Model.valoracion</span>
                                    </span>
                                </div>

                                <div class="d-flex w-100 justify-content-between">
                                    <!---Titulo-->
                                    <div class="form-group row align-items-center">
                                        <label>Curso: @Model.actividad.CURSOS.NOMBRE</label>
                                    </div>
                                    <span>
                                        <label>Competencia: @Model.actividad.COMPETENCIA.NOMBRE</label>
                                    </span>
                                </div>

                                <div class="d-flex w-100 justify-content-between">
                                    <!---Titulo-->
                                    <div class="form-group row align-items-center">
                                        <labeñ>Fecha Límite: @Model.actividad.FECHA_LIMITE</labeñ>
                                    </div>
                                    <span>
                                        <labeñ>Tipo: Test</labeñ>
                                    </span>
                                </div>

                            </div>

                            <div class="card-body">
                                <div class="list-group">

                                    <!---DETALLES-->
                                    <div class="list-group-item">

                                        <div class="card-body">
                                            <!--Espeicficaciones-->
                                            <div>
                                                <span class="badge bg-primary">
                                                    Cantidad Preguntas <span class="badge bg-transparent">3</span>
                                                </span>
                                            </div>

                                            <br />
                                            <!---Preguntas-->
                                            <ul class="list-group list-group-flush">
                                                @foreach (var item in Model.actividad.CUESTIONARIO)
                                                {

                                                <li class="list-group-item">
                                                    <br />
                                                    <div class="d-flex w-100 justify-content-between">
                                                        <p>@item.PREGUNTA</p>
                                                        @if (item.OPCIONES == null)
                                                        {<b>Tipo: Pregunta Única</b>}
                                                        @if (item.RESPUESTA == null)
                                                        {<b>Tipo: Pregunta Libre</b>}
                                                        @if (item.RESPUESTA != null && item.OPCIONES != null)
                                                        {<b>Tipo: Pregunta Libre</b>}
                                                    </div>
                                                    <br />
                                                    <div class="d-flex w-100 justify-content-between">

                                                        <i>Respuesta: @item.RESPUESTA</i>
                                                    </div>
                                                    <div class="d-flex w-100 justify-content-between">

                                                        <i>Opciones: @item.OPCIONES</i>
                                                    </div>
                                                </li>

                                                }

                                            </ul>
                                            </div>

                                    </div>
                                </div>
                            </div>

                        </div>
                    </div>
                </div>
            </section>
        </div>
    </div>
</div>