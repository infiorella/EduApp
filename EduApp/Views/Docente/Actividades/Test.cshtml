@model IEnumerable<EduApp.Models.ViewModels.ACTIVIDAD>

@{
    ViewBag.Title = "Test";
    Layout = "~/Views/Shared/teacher_Layout.cshtml";
}


<div id="app">

    <div id="main">
        <header class="mb-3">
            <a href="#" class="burger-btn d-block d-xl-none">
                <i class="bi bi-justify fs-3"></i>
            </a>
        </header>

        <div class="page-heading">
            <div class="page-title">
                <div class="row">
                    <div class="col-12 col-md-6 order-md-1 order-last">
                        <h3>Test</h3>
                        <p class="text-subtitle text-muted">Lista de tests registrados</p>
                    </div>
                    <div class="col-12 col-md-6 order-md-2 order-first">
                        <nav aria-label="breadcrumb" class="breadcrumb-header float-start float-lg-end">
                            <ol class="breadcrumb">
                                <li class="breadcrumb-item">Actividades</li>
                                <li class="breadcrumb-item active" aria-current="page">Test</li>
                            </ol>
                        </nav>
                    </div>
                </div>
            </div>

            <section class="section">
                <div class="row">
                    <div class="col-xl-12">
                        <div class="card">
                            <div class="card-header">
                                <div class="d-flex w-100 justify-content-between">
                                    <h5 class="mb-1">Lista de Test</h5>
                                    <a href="@Url.Action("AddTest", "Docente")" class="btn btn-info"><i data-feather="plus-circle"></i>Agregar</a>
                                </div>
                            </div>

                            <div class="card-body">
                                <div class="list-group">

                                    @foreach (var item in Model)
                                    {
                                        <!---ITEMS DE TESTS-->
                                        <div class="list-group-item">

                                            <div class="card-header">
                                                <div class="d-flex w-100 justify-content-between">
                                                    <h5 class="mb-1">
                                                        <a href="@Url.Action("ShowLectura", "Docente",  new { id = item.ID_ACTIVIDAD }, null)">@Html.DisplayFor(modelItem => item.TITULO)</a>
                                                    </h5>
                                                    <span>
                                                        <span class="badge bg-warning">Curso</span>
                                                        <span class="badge bg-primary">
                                                           <span class="badge bg-transparent">@Html.DisplayFor(modelItem => item.CURSOS.NOMBRE)</span>
                                                        </span>
                                                    </span>
                                                </div>
                                            </div>
                                            <div class="card-body">
                                                <h6>Fech Creación: @Html.DisplayFor(modelItem => item.FECHA_CREACION)</h6>
                                                <h6>Fech Disponible:  @Html.DisplayFor(modelItem => item.FECHA_LIMITE)</h6>

                                                <p class="text-muted"> @Html.DisplayFor(modelItem => item.DESCRIPCION)</p>
                                                
                                                <div class="buttons">
                                                    <a href="@Url.Action("EditTest", "Docente", new { id = item.ID_ACTIVIDAD }, null)" class="btn icon icon-left btn-secondary"><i data-feather="edit"></i> Editar</a>
                                                    <a href="@Url.Action("ShowTest", "Docente",  new { id = item.ID_ACTIVIDAD }, null)" class="btn icon icon-left btn-primary"><i data-feather="eye"></i> Visualizar</a>
                                                    <a href="@Url.Action("DeleteTest", "Docente" , new { id = item.ID_ACTIVIDAD }, null)" class="btn icon icon-left btn-danger"><i data-feather="eye"></i> Eliminar</a>
                                                </div>
                                            </div>
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
        </div>
    </div>
</div>
