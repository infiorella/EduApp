
@{
    ViewBag.Title = "EditarTest";
    Layout = "~/Views/Shared/teacher_Layout.cshtml";
}

<div id="app">

    <div id="main">
        <header class="mb-3">
            <a href="#" class="burger-btn d-block d-xl-none">
                <i class="bi bi-justify fs-3"></i>
            </a>
        </header>

        <div class="page-heading">
            <div class="page-title">
                <div class="row">
                    <div class="col-12 col-md-6 order-md-1 order-last">
                        <h3>Test</h3>
                        <p class="text-subtitle text-muted">Añadir Test</p>
                    </div>
                    <div class="col-12 col-md-6 order-md-2 order-first">
                        <nav aria-label="breadcrumb" class="breadcrumb-header float-start float-lg-end">
                            <ol class="breadcrumb">
                                <li class="breadcrumb-item">Actividades</li>
                                <li class="breadcrumb-item active" aria-current="page">@Html.ActionLink("Test", "ActividadesTest", "Docente")</li>
                            </ol>
                        </nav>
                    </div>
                </div>
            </div>


            <section class="section">
                <div class="row">
                    <div class="col-xl-12">
                        <div class="card">
                            <div class="card-header">
                                <div class="d-flex w-100 justify-content-between">
                                    <!---Titulo-->
                                    <div class="col-md-9">
                                        <div class="form-group row align-items-center">
                                            <div class="col-lg-2 col-3">
                                                <h5 class="col-form-label">Titulo</h5>
                                            </div>
                                            <div class="col-lg-10 col-9">
                                                <input type="text" id="first-name" class="form-control" name="fname" placeholder="Titulo">
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <div>
                                    <!--Descripcion--->
                                    <div class="col-md-12">
                                        <div class="form-group row align-items-center">
                                            <div class="col-lg-2 col-2" style="width: 13% !important;">
                                                <label class="col-form-label">Descripcion</label>
                                            </div>
                                            <div class="col-lg-10 col-9">
                                                <textarea class="form-control" id="exampleFormControlTextarea1" rows="3"></textarea>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="d-flex w-100 justify-content-between">
                                        <!--Fecha-->
                                        <div class="col-md-6">
                                            <div class="form-group row align-items-center">
                                                <div class="col-lg-3 col-4">
                                                    <label class="col-form-label">Fecha</label>
                                                </div>
                                                <div class="col-lg-8 col-7">
                                                    <input type="text" id="first-name" class="form-control" name="fname" placeholder="Titulo" value="10/08/2022">
                                                </div>
                                            </div>
                                        </div>
                                        <!---Curso-->
                                        <div class="col-md-6">
                                            <div class="form-group row align-items-center">
                                                <div class="col-lg-3 col-4">
                                                    <label class="col-form-label">Cursos </label>
                                                </div>
                                                <div class="col-lg-8 col-7">
                                                    <select class="choices form-select">
                                                        <option value="square">---Cursos---</option>
                                                        <option value="rectangle">Rectangle</option>
                                                        <option value="rombo">Rombo</option>
                                                        <option value="romboid">Romboid</option>
                                                        <option value="trapeze">Trapeze</option>
                                                        <option value="traible">Triangle</option>
                                                        <option value="polygon">Polygon</option>
                                                    </select>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>


                                <div>
                                    <div class="d-flex w-100 justify-content-between">
                                        <!---Tipo--->
                                        <div class="col-md-6">
                                            <div class="form-group row align-items-center">
                                                <div class="col-lg-3 col-4">
                                                    <label class="col-form-label">Tipo</label>
                                                </div>
                                                <div class="col-lg-8 col-7">
                                                    <input type="text" id="first-name" class="form-control" name="fname" placeholder="Tipo" value="Test">
                                                </div>
                                            </div>
                                        </div>
                                        <!---Competencias--->

                                        <div class="col-md-6">
                                            <div class="form-group row align-items-center">
                                                <div class="col-lg-3 col-4">
                                                    <label class="col-form-label">Competencias </label>
                                                </div>
                                                <div class="col-lg-8 col-7">
                                                    <select class="choices form-select">
                                                        <option value="square">Competencias</option>
                                                        <option value="rectangle">Rectangle</option>
                                                        <option value="rombo">Rombo</option>
                                                        <option value="romboid">Romboid</option>
                                                        <option value="trapeze">Trapeze</option>
                                                        <option value="traible">Triangle</option>
                                                        <option value="polygon">Polygon</option>
                                                    </select>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="card-body">

                                <div class="list-group">

                                    <!---DETALLES-->
                                    <div class="list-group-item">

                                        <div class="card-body">
                                            <!--Espeicficaciones-->
                                            <div class="d-flex w-100 justify-content-between">
                                                <span class="badge bg-primary">
                                                    Cantidad Preguntas <span class="badge bg-transparent">12</span>
                                                </span>
                                                <a href="#" class="btn btn-info">Agregar</a>
                                            </div>

                                            <br />
                                            <!---Preguntas-->

                                            <ul class="list-group list-group-flush">
                                                <!---ITEM CON ALTERNATIVAS--->
                                                <li class="list-group-item">
                                                    <h5>Pregunta 1</h5>
                                                    <div class="d-flex w-100 justify-content-between">
                                                        <!--Pregunta-->
                                                        <div class="col-md-12">
                                                            <div class="form-group row align-items-center">
                                                                <div class="col-lg-2 col-3">
                                                                    <label class="col-form-label">Pregunta</label>
                                                                </div>
                                                                <div class="col-lg-10 col-9">
                                                                    <input type="text" id="first-name" class="form-control" name="fname" placeholder="Pregunta" value="1) ¿Cuantas regiones existe en el Perú?" "?>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div class="d-flex w-100 justify-content-between">
                                                        <!---Tipo-->
                                                        <div class="col-md-12">
                                                            <div class="form-group row align-items-center">
                                                                <div class="col-lg-2 col-3">
                                                                    <label class="col-form-label">Tipo </label>
                                                                </div>
                                                                <div class="col-lg-8 col-7">
                                                                    <select class="choices form-select">
                                                                        <option value="square">Opción Múltiple</option>
                                                                        <option value="rectangle">Rectangle</option>
                                                                        <option value="rombo">Rombo</option>
                                                                        <option value="romboid">Romboid</option>
                                                                        <option value="trapeze">Trapeze</option>
                                                                        <option value="traible">Triangle</option>
                                                                        <option value="polygon">Polygon</option>
                                                                    </select>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>

                                                    <div class="d-flex w-100 justify-content-between">
                                                        <!---Tipo-->
                                                        <div class="col-md-6">
                                                            <div class="form-group row align-items-center">
                                                                <div class="col-lg-4 col-5">
                                                                    <label class="col-form-label">Respuesta </label>
                                                                </div>
                                                                <div class="col-lg-7 col-6">
                                                                    <input type="text" id="first-name" class="form-control" name="fname" placeholder="Pregunta" value="1" ?>
                                                                </div>
                                                            </div>
                                                        </div>

                                                        <div class="col-md-6">
                                                            <div class="form-group row align-items-center">
                                                                <div class="col-lg-4 col-5">
                                                                    <label class="col-form-label">Alternativas </label>
                                                                </div>
                                                                <div class="col-lg-8 col-7">
                                                                    <input type="text" id="first-name" class="form-control" name="fname" placeholder="Pregunta" value="1,5,4,6" ?>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>

                                                    <br />
                                                </li>

                                                <br />

                                                <!--Iem sin alternativas-->
                                                <li class="list-group-item">
                                                    <h5>Pregunta 2</h5>
                                                    <div class="d-flex w-100 justify-content-between">
                                                        <!--Pregunta-->
                                                        <div class="col-md-12">
                                                            <div class="form-group row align-items-center">
                                                                <div class="col-lg-2 col-3">
                                                                    <label class="col-form-label">Pregunta</label>
                                                                </div>
                                                                <div class="col-lg-10 col-9">
                                                                    <input type="text" id="first-name" class="form-control" name="fname" placeholder="Pregunta" value="1) ¿Cuantas regiones existe en el Perú?" "?>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div class="d-flex w-100 justify-content-between">
                                                        <!---Tipo-->
                                                        <div class="col-md-12">
                                                            <div class="form-group row align-items-center">
                                                                <div class="col-lg-2 col-3">
                                                                    <label class="col-form-label">Tipo </label>
                                                                </div>
                                                                <div class="col-lg-8 col-7">
                                                                    <select class="choices form-select">
                                                                        <option value="square">Respuesta Especifica</option>
                                                                        <option value="rectangle">Rectangle</option>
                                                                        <option value="rombo">Rombo</option>
                                                                        <option value="romboid">Romboid</option>
                                                                        <option value="trapeze">Trapeze</option>
                                                                        <option value="traible">Triangle</option>
                                                                        <option value="polygon">Polygon</option>
                                                                    </select>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>

                                                    <div class="d-flex w-100 justify-content-between">
                                                        <!---Tipo-->
                                                        <div class="col-md-12">
                                                            <div class="form-group row align-items-center">
                                                                <div class="col-lg-2 col-3">
                                                                    <label class="col-form-label">Respuesta </label>
                                                                </div>
                                                                <div class="col-lg-8 col-9">
                                                                    <input type="text" id="first-name" class="form-control" name="fname" placeholder="Pregunta" value="1" ?>
                                                                </div>
                                                            </div>
                                                        </div>


                                                    </div>


                                                </li>
                                            </ul>
                                        </div>

                                    </div>
                                </div>


                            </div>
                        </div>
                    </div>
                </div>

            </section>
        </div>
    </div>
</div>