                                            <select id="avanceCompetencias" class="choices form-select">
                                                <option value="">Cursos</option>
                                                @foreach (var curso in Model.cursos)
                                                {
                                                    <option value="@curso.ID_CURSO">@curso.NOMBRE</option>
                                                }
                                            </select>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="card-body">
                                <div id="chart-avance-competencias"></div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-12 col-xl-4">
                        <div class="card">
                            <div class="card-header">
                                <h4>Avance de Actividades</h4>
                            </div>
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-6">
                                        <div class="d-flex align-items-center">
