            </div>
            <div class="col-12 col-lg-3">
                <div class="card">
                    <div class="card-body py-4 px-4">
                        <div class="d-flex align-items-center">
                            <div class="avatar avatar-xl">
                                <img src="~/Content/images/Docentes/Docente1.jpg" alt="Face 1">
                            </div>
                            <div class="ms-3 name">
                                <h5 class="font-bold">@Html.DisplayFor(model => model.docente.APELLIDO_PATERNO) @Html.DisplayFor(model => model.docente.APELLIDO_MATERNO)</h5>
                                <h6 class="text-muted mb-0"> @Html.DisplayFor(model => model.docente.NOMBRES)</h6>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card">
                    <div class="card-header">
                        <h4>Alumnos Necesitantes de ayuda</h4>
                    </div>
                    <div class="card-content pb-4">

                        @foreach (var alumno in Model.alumnosayuda)
                        {

                            <div class="recent-message d-flex px-4 py-3">
                                <div class="avatar avatar-lg">
                                    @if (alumno.SEXO == "F")
                                    {
                                        <img src="~/Content/images/Alumnos/m1.png">
                                    }
                                    else
                                    {
                                        <img src="~/Content/images/Alumnos/h1.png">
                                    }

                                </div>
                                <div class="name ms-4">
                                    <h5 class="mb-1">@alumno.APELLIDO_PATERNO @alumno.APELLIDO_MATERNO</h5>
                                    <h6 class="text-muted mb-0">@alumno.NOMBRES</h6>
                                </div>
                            </div>
                        }

                    </div>
                </div>
                <div class="card">
                    <div class="card-header">
                        <div class="row">
                            <div class="col-lg-8 mb-1">
                                <h4>Notas de últimas actividades</h4>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-12 mb-1">
                                <div class="form-group">
                                    <select id="notas" class="choices form-select">
                                        @foreach (var actividad in Model.ListActividades)
                                        {
                                            <option value="@actividad.ID_TIPO_ACTIVIDAD">@actividad.NOMBRE</option>
                                        }
                                    </select>

                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="card-body">
                        <div id="chart-notas"></div>
                    </div>
                </div>
            </div>
        </section>
    </div>

</div>

@section Scripts
{

    @Scripts.Render("~/Docente/Dashoard/js");

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script>

        let optionsNotas = {
            series: [9, 7, 5, 6],
            labels: ['AD', 'A', 'B', 'C'],
            colors: ['#5ddab4', '#435ebe', '#55c6e8', '#ff7976'],
            chart: {
                type: 'donut',
                width: '100%',
                height: '350px'
            },
            legend: {
                position: 'bottom'
            },
            plotOptions: {
                pie: {
                    donut: {
                        size: '30%'
                    }
                }
            }
        }


        //Avance de Notas
        var chartNotas = new ApexCharts(document.getElementById('chart-notas'), optionsNotas);
        chartNotas.render();


        /*$('actividad-notas').change(function () {
            var uid = this.value;
            $.ajax({
                url: '/Docente/GetChartNotasIndex',
                type: 'GET',
                data: { IdTipoActividad: uid },
                success: function (result) {
                    alert('mnne');
                }
            });
        });*/

        const tipo = document.getElementById('notas');
        tipo.addEventListener('change', getDatosTipo);


        window.onload = function () {
            var el = document.getElementsByName('notas')[0];
            el.value = 1; //Set default value
            el.onchange(); //trigger onchange event
        }

        function getDatosTipo() {
            /*chartNotas.updateSeries([
                {
                    data: [10, 2, 7, 8]
                }
            ]);*/

            $.post("/Docente/GetChartNotasIndex",
                { IdTipoActividad: tipo.value },
                function (response) {
                    chartNotas.updateOptions({
                        series: response,
                        labels: ['AD', 'A', 'B', 'C'],
                        colors: ['#5ddab4', '#435ebe', '#55c6e8', '#ff7976'],
                        chart: {
                            type: 'donut',
                            width: '100%',
                            height: '350px'
                        },
                        legend: {
                            position: 'bottom'
                        },
                        plotOptions: {
                            pie: {
                                donut: {
                                    size: '30%'
                                }
                            }
                        }
                    })
                }
            );


        }





        //Avance Competencias
        var optionsAvanceCompetencias = {
            annotations: {
                position: 'back'
            },
            dataLabels: {
                enabled: false
            },
            chart: {
                type: 'bar',
                height: 300
            },
            fill: {
                opacity: 1
            },
            plotOptions: {
            },
            series: [{
                name: 'Alumnos',
                data: [9, 20, 30, 20, 10, 20]
            }],
            colors: '#435ebe',
            xaxis: {
                categories: ["Competencia 1", "Competencia 2", "Competencia 3", "Competencia 4", "Competencia 5", "Competencia 6"],
            },
        }

        //AVANCE DE COMPETENCIAS
        var chartAvanceCompetencias = new ApexCharts(document.querySelector("#chart-avance-competencias"), optionsAvanceCompetencias);
        chartAvanceCompetencias.render();


        const curso = document.getElementById('avanceCompetencias');
        curso.addEventListener('change', getDatosCompetencias);


        function getDatosCompetencias() {
            $.post("/Docente/GetChartCompetenciasIndex",
                { IdCurso: curso.value },
                function (response) {
                    chartAvanceCompetencias.updateOptions({
                        annotations: {
                            position: 'back'
                        },
                        dataLabels: {
                            enabled: false
                        },
                        chart: {
                            type: 'bar',
                            height: 300
                        },
                        fill: {
                            opacity: 1
                        },
                        plotOptions: {
                        },
                        series: [{
                            name: 'Alumnos',
                            data: response.data
                        }],
                        colors: '#435ebe',
                        xaxis: {
                            categories: response.labels,
                        },
                    })
                }
            );
        }
    </script>

}
