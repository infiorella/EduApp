                                                <use xlink:href="~/Content/images/bootstrap-icons.svg#circle-fill" />
                                            </svg>
                                            <h5 class="mb-0 ms-3">Foros</h5>
                                        </div>
                                    </div>
                                    <div class="col-6">
                                        <h5 class="mb-0"></h5>
                                    </div>
                                    <div class="col-12">
