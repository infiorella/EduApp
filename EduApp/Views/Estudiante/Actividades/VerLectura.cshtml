@model EduApp.Models.ViewModels.ACTIVIDAD
@{
    ViewBag.Title = "Lecturas";
    Layout = "~/Views/Shared/students_Layout.cshtml";
}


<div id="app">

    <div id="main">
        <header class="mb-3">
            <a href="#" class="burger-btn d-block d-xl-none">
                <i class="bi bi-justify fs-3"></i>
            </a>
        </header>

        <div class="page-heading">
            <div class="page-title">
                <div class="row">
                    <div class="col-12 col-md-6 order-md-1 order-last">
                        <h3>Lecturas</h3>
                    </div>
                    <div class="col-12 col-md-6 order-md-2 order-first">
                        <nav aria-label="breadcrumb" class="breadcrumb-header float-start float-lg-end">
                            <ol class="breadcrumb">
                                <li class="breadcrumb-item">Actividades</li>
                                <li class="breadcrumb-item active" aria-current="page">Lectura</li>
                            </ol>
                        </nav>
                    </div>
                </div>
            </div>
            <section id="content-types">
                <div class="row">
                    <div class="d-flex w-100 justify-content-between">
                        <p class="text-subtitle text-muted">Lectura</p>
                    </div>


                    <div class="card">
                        <div class="card-content">
                            <div class="card-header">
                                <h4 class="card-title">@Model.TITULO</h4>
                            </div>
                            <div class="card-body">
                                <p class="card-text">Curso: @Model.COMPETENCIA.CURSOS.NOMBRE</p>
                                <p class="card-text">Competencia: @Model.COMPETENCIA.NOMBRE</p>
                                <span>
                                    <span class="badge bg-secondary">Estado: Pendiente</span>
                                </span>
                                <span>
                                    <span class="badge bg-info">Cantidad preguntas @Model.CUESTIONARIO.Count</span>
                                </span>
                            </div>

                            <div class="card-body">
                                <textarea class="form-control" id="exampleFormControlTextarea1" readonly rows="4">@Model.DESCRIPCION</textarea>
                                <br />
                                <embed src="~/@Model.ARCHIVO" width="950" height="600"
                                       type="application/pdf">
                            </div>
                        </div>
                    </div>

                    <div class="col-md-12 ">
                        <div class="card">
                            <div class="card-body">
                                <ul id="container" class="list-group list-group-flush">
                                    @foreach (var item in Model.CUESTIONARIO)
                                    {
                                        <li id="mainsection" class="list-group-item">
                                            <h6>Pregunta</h6>
                                            <div class="d-flex w-100 justify-content-between">
                                                <div class="col-md-12">
                                                    <div class="form-group row align-items-center">
                                                        <p>@item.PREGUNTA</p>
                                                    </div>
                                                </div>
                                            </div>

                                            <div class="d-flex w-100 justify-content-between">
                                                <div class="col-md-12">
                                                    <div class="form-group row align-items-center">
                                                        <div class="form-check">
                                                            @if (item.OPCIONES.Length > 1)
                                                            {
                                                                foreach (var alternativa in item.OPCIONES.Split(','))
                                                                {
                                                                    <input class="form-check-input" type="radio" name="alternativa" id="flexRadioDefault1">
                                                                    <label class="form-check-label" for="alternativa">
                                                                        @alternativa
                                                                    </label>
                                                                    <br />
                                                                }
                                                            }
                                                            else
                                                            {
                                                                <input type="text" class="form-control" id="basicInput" placeholder="Ingresa tu respuesta">
                                                            }
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </li>
                                    }
                                </ul>
                            </div>

                            <div class="card-footer">
                                <a href="#" class="btn icon icon-left btn-danger"><i data-feather="edit"></i>Enviar</a>
                            </div>

                        </div>
                    </div>
                </div>
            </section>
        </div>
    </div>
</div>