@model IEnumerable<EduApp.Models.ViewModels.ACTIVIDAD>
@{
    ViewBag.Title = "Test";
    Layout = "~/Views/Shared/students_Layout.cshtml";
}

<div id="app">

    <div id="main">
        <header class="mb-3">
            <a href="#" class="burger-btn d-block d-xl-none">
                <i class="bi bi-justify fs-3"></i>
            </a>
        </header>

        <div class="page-heading">
            <div class="page-title">
                <div class="row">
                    <div class="col-12 col-md-6 order-md-1 order-last">
                        <h3>Test</h3>
                        <p class="text-subtitle text-muted">Lista de Test</p>
                    </div>
                    <div class="col-12 col-md-6 order-md-2 order-first">
                        <nav aria-label="breadcrumb" class="breadcrumb-header float-start float-lg-end">
                            <ol class="breadcrumb">
                                <li class="breadcrumb-item">Actividades</li>
                                <li class="breadcrumb-item active" aria-current="page">Test</li>
                            </ol>
                        </nav>
                    </div>
                </div>
            </div>

            <section class="section">
                <div class="row">
                    <div class="col-xl-12">
                        <div class="card">
                            <div class="card-header">
                                <div class="d-flex w-100 justify-content-between">
                                    <h5 class="mb-1">Test</h5>
                                    }
                                </div>
                            </div>

                            <div class="card-body">
                                <div class="list-group">

                                    @foreach (var item in Model)
                                    {
                                        <div class="list-group-item">

                                            <div class="card-header">
                                                <div class="d-flex w-100 justify-content-between">
                                                    <h5 class="mb-1">@item.TITULO</h5>
                                                    <span>
                                                        <span class="badge bg-light-info">Curso: @item.CURSOS.NOMBRE</span>
                                                        <span class="badge bg-success">
                                                            Estado:
                                                            @if (item.DETALLE_ACTIVIDAD.Where(x => x.ID_ALUMNO == 4).Any())
                                                            {
                                                                <span class="badge bg-transparent">Completado</span>

                                                            }
                                                            else
                                                            {
                                                                <span class="badge bg-light">Pendiente</span>
                                                            }

                                                        </span>
                                                    </span>
                                                </div>
                                            </div>
                                            <div class="card-body">
                                                <h6>Fecha Disponible: @item.FECHA_LIMITE</h6>

                                                <p class="text-muted">@item.DESCRIPCION</p>
                                                <div class="buttons">
                                                    <a href="@Url.Action("VerTest", "Estudiante", new { id = item.ID_ACTIVIDAD }, null)" class="btn icon icon-left btn-primary"><i data-feather="eye"></i> 
                                                    Realizar Actividad</a>
                                                </div>
                                            </div>
                                        </div>
                                        }


                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                </section>
            </div>
        </div>
    </div>

